<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_NFL"
    android:orientation="vertical"
    tools:context=".ui.activities.MainMenuActivity">

    <Button
        android:id="@+id/tableTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/background_button_login"
        android:text="@string/lista_de_times"
        android:fontFamily="@font/font_nfl"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/tableStanding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_nfl"
        android:layout_margin="30dp"
        android:background="@drawable/background_button_login"
        android:text="@string/tabela_campeonato"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/table15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="@font/font_nfl"
        android:background="@drawable/background_button_login"
        android:text="Ultimos 15 Jogos"
        android:textColor="@color/white" />


</LinearLayout>